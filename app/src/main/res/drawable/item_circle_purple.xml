<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer purple oval -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/gigas400" />
            <stroke android:width="2dp" android:color="@color/gigas400" />
            <padding android:left="5dp" android:right="5dp" android:top="5dp" android:bottom="5dp" />
            <corners android:radius="10dp" android:elevation="20dp" />
        </shape>
    </item>

    <!-- Inner white circle -->
    <item
        android:top="10dp"
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
            <corners android:radius="10dp"
                android:elevation="20dp"/>
        </shape>
    </item>
</layer-list>
